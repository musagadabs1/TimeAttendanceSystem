@model TimeAttendanceSystem.Models.Finalize

@{
                /**/

                ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="alert-heading">
        <h2 style="text-align:center; color:#0094ff">Finalize</h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.VarianceSetting, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(model => model.VarianceSetting, new SelectList(ViewBag.Variance, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VarianceSetting, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FinalizeDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.FinalizeDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FinalizeDate, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.SendEmail, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-1">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.SendEmail)
                            @Html.ValidationMessageFor(model => model.SendEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Finalize" id="btnFinalize" class="btn btn-primary" />
                    </div>
                </div>
            </div>    
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.AttendanceDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.AttendanceDate, (SelectList)ViewBag.Finalize, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AttendanceDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Show" id="btnShow" formaction="@Url.Action("Show","Finalizes")" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
    
}